@*@model Vishop.Models.Movie*@
@model Vishop.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "AllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All movies</h2>

@if(Model.Movie.Count == 0)
{
    <text>No movies yet.</text>
} else
{
    <table class="table table-striped table-­bordered	  table‐hover">
        <thead><tr><th>Movie Name</th></tr></thead>
        <tbody>
            @foreach(var movie in Model.Movie)
            {
                <tr><td>"@movie.name"</td></tr>
            }
        </tbody>
    </table>
}