@*@model Vishop.Models.Movie*@
@model Vishop.ViewModels.RandomMovieViewModel

@{
    ViewBag.Title = "AllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All movies</h2>

@if(Model.Movie.Count == 0)
{
    <text>No movies yet.</text>
} else
{
    <table class="table table-striped table-­bordered
  table‐hover">
        <thead>
            <tr>
                <th>Movie Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var movie in Model.Movie)
            {
                <tr>
                    <td>@Html.ActionLink(@movie.name, "Details", "Movie", new { id = movie.id }, null)</td>
                    <td>@movie.genre</td>
                </tr>
            }
            </tbody>
        </table>
}