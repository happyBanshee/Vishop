@model IEnumerable<Vishop.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>All Customers</h2>
@if(!Model.Any() )
{
    <text>No customers yet.</text>
} else
{
    @Html.ActionLink("Add new customer","New","Customer",new { }, new { @class="btn btn-primary"})
    <table class="table table-striped table-­bordered table‐hover">
        <thead>
        <tr>
            <th>Customer Name</th>
            <th>Membership name</th>
        </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {

                <tr>
                    <td>@Html.ActionLink(customer.Name, "Edit", "Customer",
                            new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.Name</td>
            </tr>
            }
        </tbody>
    </table>
}